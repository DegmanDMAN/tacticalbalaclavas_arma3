```c
// This will provide your modded face compatibility with the mod's balaclava mechanism
// This does NOT replace your modded face. It adds an alternative version of it only used while balaclavas are worn.

CfgFaces {

#if __has_include("\deg_balaclava\config.hpp") 		// Checks if Tactical Balaclavas mod is loaded

#define TacBalaFace(CLASSNAME)\ //returns Deg_TB_yourFaceClassname
    class Deg_TB_##CLASSNAME##: ##CLASSNAME##\ 		//Deg_TB_ prefix ensures this face will be registered to face switch function
    {\
      displayName=[TB] ##CLASSNAME##;\ 		//not really important since it won't be visible, but still...
      author="Author's name";\
      disabled=1;\ 			//this face should NOT be selectable in profile, arsenal or 3den
      head="Deg_Head_TB_Face";\ 	// This can be your own .p3d model - should be only the area around eyes and lower neck, with the rest of face non-existent. Example is provided in main repository. h_tb_face.p3d
      identityTypes[]=\
      {\
      };\
    }

TacBalaFace(PersianHead_A3_01); 	// returns Deg_TB_PersianHead_A3_01
    TacBalaFace(yourFaceClassname01); 	// returns Deg_TB_yourFaceClassname01
    TacBalaFace(yourFaceClassname02);


};

class CfgHeads
{
	class Default_A3
	{
	};
	class DefaultHead_A3: Default_A3
	{
	};
	class Deg_Head_TB_Face: Default_A3
	{
		model="deg_balaclava\heads\h_tb_face.p3d";
		selectionHeadWound="injury_head";
		selectionPersonality="personality";
	};	
	class YourCustomBalaclavaHead: Default_A3
	{
		model="yourAddon\heads\your_Head.p3d"; 		// Should be only the area around eyes and lower neck, with the rest of face non-existent. Example is provided in main repository. h_tb_face.p3d
		selectionHeadWound="injury_head";
		selectionPersonality="personality";
	};	

};
// add your own balaclavas here
class CfgGlasses {

	class None;
	class Deg_TB_yourClassName: None 		// Deg_TB_ prefix will register your goggles as trigger for face swap
	{
		model="yourAddon\heads\yourGoggles.p3d";
		// Additional params
};
#endif
```
